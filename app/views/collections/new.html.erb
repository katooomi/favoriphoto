<div class="contents row">
  <div class="container">
    <h3>投稿する</h3>
    <%= form_with(model: @collection,url:collections_path, local: true) do |form| %>
      <div class="field">
      <%= form.label :image, "Favorite Photo"%><br />
      <%= form.file_field :image%>
      
      <div class="field"><br />
      <%= form.text_area :tweet, placeholder: "Comment", rows: "10" %>
      <%= form.submit "SEND" %>
    <% end %>

  </div>
</div>
